

public class BubbleSort {

	public static void bubble(int arr[], int n) {
		
		for(int i = 0; i < n -1; i++)
		{
			int flag = 0;
			for(int j = 0; j < i - 1; i++)
			{
				if(arr[j] > arr[j+1])
				{
					flag = 1;
					int temp = arr[j];
					arr[j] = arr[j+1];
					arr[j+1] = temp;
				}
			}
			if(flag == 0)	return;
		}
		
	}
	public static void main(String[] args) {
		
	}
}
